<?xml version="1.0" encoding="UTF-8"?>
<Grid xmlns="http://xamarin.com/schemas/2014/forms" 
      xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
      xmlns:controls="clr-namespace:MobileAppChallenge.Controls"
      RowDefinitions="*"
      RowSpacing="0"
      x:Class="MobileAppChallenge.Views.AddDeveloperView">
    <ScrollView Grid.Row="0">
        <StackLayout Spacing="0">
            <controls:SimpleEntry x:Name="txtName" Grid.Row="0" Placeholde="First Name" Text="" Margin="15,15,15,0"/>
            <controls:SimpleEntry x:Name="txtEmailNumber" Grid.Row="1" Text="" Placeholde="Email" Margin="15,5"/>
            <controls:SimpleEntry x:Name="txtCompany" Grid.Row="2" Placeholde="Company" Text="" Margin="15,0"/>
            <controls:SimpleEntry x:Name="txtAge" Grid.Row="3" Text="" Placeholde="Age" Margin="15,5,15,0" />
            <Button x:Name="btnAdd" Grid.Row="4" Text="Add" Style="{StaticResource ChalllengeButton}" Margin="10"/>
        </StackLayout>
    </ScrollView>
    <controls:Loader x:Name="loader" Grid.Row="0"/>
</Grid>