<?xml version="1.0" encoding="UTF-8"?>
<Grid xmlns="http://xamarin.com/schemas/2014/forms" 
      xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
      x:Class="MobileAppChallenge.Controls.Loader"
      IsVisible="False"
      x:Name="loader"
      VerticalOptions="FillAndExpand"
      HorizontalOptions="FillAndExpand">
    <Grid.RowDefinitions>
        <RowDefinition/>
    </Grid.RowDefinitions>
    <Frame Grid.Row="0" CornerRadius="0" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" BackgroundColor="{StaticResource ChallengeBar}" Opacity="0.1"/>
    <ActivityIndicator Grid.Row="0" Color="{StaticResource ChallengeBar}" VerticalOptions="Center" HorizontalOptions="Center" HeightRequest="50" WidthRequest="50" IsRunning="True" IsEnabled="True" IsVisible="True"/>
</Grid>